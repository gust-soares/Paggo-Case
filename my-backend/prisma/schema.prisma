// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invoice {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  ocrResult String?
  createdAt DateTime @default(now())
}
